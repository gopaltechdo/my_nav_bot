<?xml version="1.0"?>
<robot name="four_wheel_robot">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.66 0.50 0.10"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.66 0.50 0.10"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="10"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0"
               iyy="0.1" iyz="0.0"
               izz="0.1"/>
    </inertial>
  </link>

  <!-- Wheel template -->
  <!-- Each wheel is a cylinder of 20cm diameter, 5cm thickness -->

  <!-- Macros would help in xacro, but we'll repeat manually -->

  <!-- Front Left Wheel -->
  <link name="wheel_fl">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.10"/>
      </geometry>
      <origin xyz="0.33 0.25 0.05" rpy="0 1.5708 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.10"/>
      </geometry>
      <origin xyz="0.33 0.25 0.05" rpy="0 1.5708 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001"/>
    </inertial>
  </link>

  <joint name="joint_wheel_fl" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_fl"/>
    <origin xyz="0.33 0.25 0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Front Right Wheel -->
  <link name="wheel_fr">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.10"/>
      </geometry>
      <origin xyz="0.33 -0.25 0.05" rpy="0 1.5708 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.10"/>
      </geometry>
      <origin xyz="0.33 -0.25 0.05" rpy="0 1.5708 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001"/>
    </inertial>
  </link>

  <joint name="joint_wheel_fr" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_fr"/>
    <origin xyz="0.33 -0.25 0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Rear Left Wheel -->
  <link name="wheel_rl">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.10"/>
      </geometry>
      <origin xyz="-0.33 0.25 0.05" rpy="0 1.5708 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.10"/>
      </geometry>
      <origin xyz="-0.33 0.25 0.05" rpy="0 1.5708 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001"/>
    </inertial>
  </link>

  <joint name="joint_wheel_rl" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_rl"/>
    <origin xyz="-0.33 0.25 0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Rear Right Wheel -->
  <link name="wheel_rr">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.10"/>
      </geometry>
      <origin xyz="-0.33 -0.25 0.05" rpy="0 1.5708 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.10"/>
      </geometry>
      <origin xyz="-0.33 -0.25 0.05" rpy="0 1.5708 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001"/>
    </inertial>
  </link>

  <joint name="joint_wheel_rr" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_rr"/>
    <origin xyz="-0.33 -0.25 0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>
